<h1>Sk8Tool</h1>

<div class="title">
    <h2>title</h2>
    <div>current time</div>
    <div>weather</div>
</div>

<div id='button-bar' class='button-bar'>
    <input class="city-input" type="text">
    <button class="parks-btn"><a href="/"></a>Park</a></button>
    <button class="shops-btn"><a href="/">Shop</a></button>
    <button><a href='/add-spot'>Add-Spot</a></button>
    <button><a href="/">Weather</a></button>
</div>

<div class="class">
    <ul class='spots'>

        {{#each spots}}
            <button>click</button>
            <li class="spot">Spot: {{ name }}</li>
            <li>Spot description: {{ description }}</li>
            {{#if cross_street}}
            <li>cross_street: {{ cross_street }}</li>
            {{/if}}
            {{#if security_guards}}
            <li>Security Guards:{{ security_when }}</li>
            {{/if}}
        </li>
        {{/each}}

    </ul>

    <div class="map" style="width: 500px; height: 500px;"></div>
</div>
<script src="http://maps.google.com/maps/api/js?sensor=false&key=AIzaSyDmZhf4Cy3XVS_6hruDDGNfWfd0Uaxfxp4" type="text/javascript"></script>
<script src="/assets/js/view-spots.js"></script>